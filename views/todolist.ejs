<html>
  <head>
    <title>Todo List</title>
    <meta charset="UTF-8">
  </head>
  <body>
    <h1>Todo List</h1>

    <form method="POST" action="/task">
      <input type="text" placeholder="New task" name="task" autofocus>
      <button type="submit">Add</button>
    </form>

    <h3>Tasks</h3>

    <ul>
      <% tasks.forEach((task) => { %>
        <% if (task.done) { %>
          <li>
            <s><%= task.title %></s> 
            | <a href="#"> Delete</a>
          </li>
        <% } else { %>
            <li>
              <%= task.title %> 
              | <a href="#"> Done</a>
            </li>
        <% } %>
      <% }) %>
    </ul>
  </body>
</html>